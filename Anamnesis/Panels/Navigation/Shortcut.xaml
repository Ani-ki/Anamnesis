<UserControl
	x:Class="Anamnesis.Panels.Navigation.Shortcut"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:XivToolsWpf="clr-namespace:XivToolsWpf.Controls;assembly=XivToolsWpf"
	xmlns:ana="clr-namespace:Anamnesis"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Anamnesis.Panels.Navigation"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">

	<Button
		x:Name="ButtonContent"
		Margin="0,2"
		HorizontalContentAlignment="Left"
		Click="OnClicked"
		Style="{StaticResource TransparentIconButton}">

		<Grid Margin="0,3">

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<XivToolsWpf:IconBlock
				Grid.Column="0"
				Height="16"
				Icon="{Binding Icon}" />

			<XivToolsWpf:TextBlock
				Key="{Binding LabelKey}"
				Grid.Column="1"
				Margin="6,0,0,0"
				Visibility="{Binding ShowText, Converter={StaticResource B2V}}" />

			<Grid.ToolTip>
				<XivToolsWpf:TextBlock Key="{Binding ToolTipKey}" />
			</Grid.ToolTip>
		</Grid>
	</Button>

</UserControl>
